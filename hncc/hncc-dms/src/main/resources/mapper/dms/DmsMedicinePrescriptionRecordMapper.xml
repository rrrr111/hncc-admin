<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruan.hncc.dms.mapper.DmsMedicinePrescriptionRecordMapper">
    
    <resultMap type="com.ruan.hncc.dms.domain.DmsMedicinePrescriptionRecord" id="DmsMedicinePrescriptionRecordResult">
        <result property="id"    column="id"    />
        <result property="status"    column="status"    />
        <result property="createTime"    column="create_time"    />
        <result property="amount"    column="amount"    />
        <result property="name"    column="name"    />
        <result property="registrationId"    column="registration_id"    />
        <result property="refundStatus"    column="refund_status"    />
        <result property="type"    column="type"    />
        <result property="createStaffId"    column="create_staff_id"    />
    </resultMap>

    <sql id="selectDmsMedicinePrescriptionRecordVo">
        select id, status, create_time, amount, name, registration_id, refund_status, type, create_staff_id from dms_medicine_prescription_record
    </sql>

    <select id="selectDmsMedicinePrescriptionRecordList" parameterType="com.ruan.hncc.dms.domain.DmsMedicinePrescriptionRecord" resultMap="DmsMedicinePrescriptionRecordResult">
        <include refid="selectDmsMedicinePrescriptionRecordVo"/>
        <where>  
            <if test="status != null "> and status = #{status}</if>
            <if test="amount != null "> and amount = #{amount}</if>
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="registrationId != null "> and registration_id = #{registrationId}</if>
            <if test="refundStatus != null "> and refund_status = #{refundStatus}</if>
            <if test="type != null "> and type = #{type}</if>
            <if test="createStaffId != null "> and create_staff_id = #{createStaffId}</if>
        </where>
    </select>
    
    <select id="selectDmsMedicinePrescriptionRecordById" parameterType="Long" resultMap="DmsMedicinePrescriptionRecordResult">
        <include refid="selectDmsMedicinePrescriptionRecordVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertDmsMedicinePrescriptionRecord" parameterType="com.ruan.hncc.dms.domain.DmsMedicinePrescriptionRecord" useGeneratedKeys="true" keyProperty="id">
        insert into dms_medicine_prescription_record
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="status != null">status,</if>
            <if test="createTime != null">create_time,</if>
            <if test="amount != null">amount,</if>
            <if test="name != null">name,</if>
            <if test="registrationId != null">registration_id,</if>
            <if test="refundStatus != null">refund_status,</if>
            <if test="type != null">type,</if>
            <if test="createStaffId != null">create_staff_id,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="status != null">#{status},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="amount != null">#{amount},</if>
            <if test="name != null">#{name},</if>
            <if test="registrationId != null">#{registrationId},</if>
            <if test="refundStatus != null">#{refundStatus},</if>
            <if test="type != null">#{type},</if>
            <if test="createStaffId != null">#{createStaffId},</if>
         </trim>
    </insert>

    <update id="updateDmsMedicinePrescriptionRecord" parameterType="com.ruan.hncc.dms.domain.DmsMedicinePrescriptionRecord">
        update dms_medicine_prescription_record
        <trim prefix="SET" suffixOverrides=",">
            <if test="status != null">status = #{status},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="amount != null">amount = #{amount},</if>
            <if test="name != null">name = #{name},</if>
            <if test="registrationId != null">registration_id = #{registrationId},</if>
            <if test="refundStatus != null">refund_status = #{refundStatus},</if>
            <if test="type != null">type = #{type},</if>
            <if test="createStaffId != null">create_staff_id = #{createStaffId},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteDmsMedicinePrescriptionRecordById" parameterType="Long">
        delete from dms_medicine_prescription_record where id = #{id}
    </delete>

    <delete id="deleteDmsMedicinePrescriptionRecordByIds" parameterType="String">
        delete from dms_medicine_prescription_record where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>