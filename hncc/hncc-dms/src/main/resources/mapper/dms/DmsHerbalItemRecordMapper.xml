<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruan.hncc.dms.mapper.DmsHerbalItemRecordMapper">
    
    <resultMap type="com.ruan.hncc.dms.domain.DmsHerbalItemRecord" id="DmsHerbalItemRecordResult">
        <result property="id"    column="id"    />
        <result property="status"    column="status"    />
        <result property="prescriptionId"    column="prescription_id"    />
        <result property="medicalAdvice"    column="medical_advice"    />
        <result property="footnote"    column="footnote"    />
        <result property="drugId"    column="drug_id"    />
        <result property="usageNum"    column="usage_num"    />
        <result property="usageNumUnit"    column="usage_num_unit"    />
        <result property="totalNum"    column="total_num"    />
        <result property="currentNum"    column="current_num"    />
    </resultMap>

    <sql id="selectDmsHerbalItemRecordVo">
        select id, status, prescription_id, medical_advice, footnote, drug_id, usage_num, usage_num_unit, total_num, current_num from dms_herbal_item_record
    </sql>

    <select id="selectDmsHerbalItemRecordList" parameterType="com.ruan.hncc.dms.domain.DmsHerbalItemRecord" resultMap="DmsHerbalItemRecordResult">
        <include refid="selectDmsHerbalItemRecordVo"/>
        <where>  
            <if test="status != null "> and status = #{status}</if>
            <if test="prescriptionId != null "> and prescription_id = #{prescriptionId}</if>
            <if test="medicalAdvice != null  and medicalAdvice != ''"> and medical_advice = #{medicalAdvice}</if>
            <if test="footnote != null  and footnote != ''"> and footnote = #{footnote}</if>
            <if test="drugId != null "> and drug_id = #{drugId}</if>
            <if test="usageNum != null "> and usage_num = #{usageNum}</if>
            <if test="usageNumUnit != null "> and usage_num_unit = #{usageNumUnit}</if>
            <if test="totalNum != null "> and total_num = #{totalNum}</if>
            <if test="currentNum != null "> and current_num = #{currentNum}</if>
        </where>
    </select>
    
    <select id="selectDmsHerbalItemRecordById" parameterType="Long" resultMap="DmsHerbalItemRecordResult">
        <include refid="selectDmsHerbalItemRecordVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertDmsHerbalItemRecord" parameterType="com.ruan.hncc.dms.domain.DmsHerbalItemRecord" useGeneratedKeys="true" keyProperty="id">
        insert into dms_herbal_item_record
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="status != null">status,</if>
            <if test="prescriptionId != null">prescription_id,</if>
            <if test="medicalAdvice != null">medical_advice,</if>
            <if test="footnote != null">footnote,</if>
            <if test="drugId != null">drug_id,</if>
            <if test="usageNum != null">usage_num,</if>
            <if test="usageNumUnit != null">usage_num_unit,</if>
            <if test="totalNum != null">total_num,</if>
            <if test="currentNum != null">current_num,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="status != null">#{status},</if>
            <if test="prescriptionId != null">#{prescriptionId},</if>
            <if test="medicalAdvice != null">#{medicalAdvice},</if>
            <if test="footnote != null">#{footnote},</if>
            <if test="drugId != null">#{drugId},</if>
            <if test="usageNum != null">#{usageNum},</if>
            <if test="usageNumUnit != null">#{usageNumUnit},</if>
            <if test="totalNum != null">#{totalNum},</if>
            <if test="currentNum != null">#{currentNum},</if>
         </trim>
    </insert>

    <update id="updateDmsHerbalItemRecord" parameterType="com.ruan.hncc.dms.domain.DmsHerbalItemRecord">
        update dms_herbal_item_record
        <trim prefix="SET" suffixOverrides=",">
            <if test="status != null">status = #{status},</if>
            <if test="prescriptionId != null">prescription_id = #{prescriptionId},</if>
            <if test="medicalAdvice != null">medical_advice = #{medicalAdvice},</if>
            <if test="footnote != null">footnote = #{footnote},</if>
            <if test="drugId != null">drug_id = #{drugId},</if>
            <if test="usageNum != null">usage_num = #{usageNum},</if>
            <if test="usageNumUnit != null">usage_num_unit = #{usageNumUnit},</if>
            <if test="totalNum != null">total_num = #{totalNum},</if>
            <if test="currentNum != null">current_num = #{currentNum},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteDmsHerbalItemRecordById" parameterType="Long">
        delete from dms_herbal_item_record where id = #{id}
    </delete>

    <delete id="deleteDmsHerbalItemRecordByIds" parameterType="String">
        delete from dms_herbal_item_record where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>