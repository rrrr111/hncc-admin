<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruan.hncc.dms.mapper.DmsNonDrugModelMapper">
    
    <resultMap type="com.ruan.hncc.dms.domain.DmsNonDrugModel" id="DmsNonDrugModelResult">
        <result property="id"    column="id"    />
        <result property="status"    column="status"    />
        <result property="name"    column="name"    />
        <result property="nonDrugIdList"    column="non_drug_id_list"    />
        <result property="scope"    column="scope"    />
        <result property="ownId"    column="own_id"    />
        <result property="aim"    column="aim"    />
        <result property="createTime"    column="create_time"    />
        <result property="code"    column="code"    />
        <result property="type"    column="type"    />
    </resultMap>

    <sql id="selectDmsNonDrugModelVo">
        select id, status, name, non_drug_id_list, scope, own_id, aim, create_time, code, type from dms_non_drug_model
    </sql>

    <select id="selectDmsNonDrugModelList" parameterType="com.ruan.hncc.dms.domain.DmsNonDrugModel" resultMap="DmsNonDrugModelResult">
        <include refid="selectDmsNonDrugModelVo"/>
        <where>  
            <if test="status != null "> and status = #{status}</if>
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="nonDrugIdList != null  and nonDrugIdList != ''"> and non_drug_id_list = #{nonDrugIdList}</if>
            <if test="scope != null "> and scope = #{scope}</if>
            <if test="ownId != null "> and own_id = #{ownId}</if>
            <if test="aim != null  and aim != ''"> and aim = #{aim}</if>
            <if test="code != null  and code != ''"> and code = #{code}</if>
            <if test="type != null "> and type = #{type}</if>
        </where>
    </select>
    
    <select id="selectDmsNonDrugModelById" parameterType="Long" resultMap="DmsNonDrugModelResult">
        <include refid="selectDmsNonDrugModelVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertDmsNonDrugModel" parameterType="com.ruan.hncc.dms.domain.DmsNonDrugModel" useGeneratedKeys="true" keyProperty="id">
        insert into dms_non_drug_model
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="status != null">status,</if>
            <if test="name != null">name,</if>
            <if test="nonDrugIdList != null">non_drug_id_list,</if>
            <if test="scope != null">scope,</if>
            <if test="ownId != null">own_id,</if>
            <if test="aim != null">aim,</if>
            <if test="createTime != null">create_time,</if>
            <if test="code != null">code,</if>
            <if test="type != null">type,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="status != null">#{status},</if>
            <if test="name != null">#{name},</if>
            <if test="nonDrugIdList != null">#{nonDrugIdList},</if>
            <if test="scope != null">#{scope},</if>
            <if test="ownId != null">#{ownId},</if>
            <if test="aim != null">#{aim},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="code != null">#{code},</if>
            <if test="type != null">#{type},</if>
         </trim>
    </insert>

    <update id="updateDmsNonDrugModel" parameterType="com.ruan.hncc.dms.domain.DmsNonDrugModel">
        update dms_non_drug_model
        <trim prefix="SET" suffixOverrides=",">
            <if test="status != null">status = #{status},</if>
            <if test="name != null">name = #{name},</if>
            <if test="nonDrugIdList != null">non_drug_id_list = #{nonDrugIdList},</if>
            <if test="scope != null">scope = #{scope},</if>
            <if test="ownId != null">own_id = #{ownId},</if>
            <if test="aim != null">aim = #{aim},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="code != null">code = #{code},</if>
            <if test="type != null">type = #{type},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteDmsNonDrugModelById" parameterType="Long">
        delete from dms_non_drug_model where id = #{id}
    </delete>

    <delete id="deleteDmsNonDrugModelByIds" parameterType="String">
        delete from dms_non_drug_model where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>